<%- include('./_head.ejs') %>
<div class="container mt-4">
  <h1>{{Model}}</h1>
  <table class="w-50 my-4">
    <tbody>
      {{#indexColumns}}
      <tr>
        <td class="h6">{{Name}}</td>
        {{#date}}
        <td><%= formatDate({{../model}}.{{name}}) %></td>
        {{/date}}
        {{^date}}
        <td><%- {{../model}}.{{name}} %></td>
        {{/date}}
      </tr>
      {{/indexColumns}}
    </tbody>
  </table>

  <div class="form-group mb-2">
    <div class="d-flex align-items-center" style="gap: 1rem">
      <a href="/{{router}}/edit/<%= {{model}}.id %>" class="btn btn-primary">Edit {{Model}}</a>
      <form action="/{{router}}/delete/<%= {{model}}.id %>" method="POST">
        <%- include(locals.LayoutPages._csrf) %>
        <button type="submit" class="btn btn-danger">Delete {{Model}}</button>
      </form>
      <a href="<%= locals.referer || "/{{router}}" %>" class="btn btn-danger">Back</a>
    </div>
  </div>
</div>
<%- include(locals.LayoutPages._tail) %>
