{
  "port": 3000,
  "api": false,
  "database": {
    "instance": "sqlite3",
    "name": "database.db",
    "schema": {
      "location": "db",
      "filename": "schema.json"
    },
    "migrations": {
      "location": "db",
      "filename": "migrations.js"
    }
  },
  "routers": {
    "location": "routers"
  },
  "models": {
    "location": "models"
  },
  "views": {
    "location": "views",
    "pages": {
      "dateFields": ["created_at", "updated_at"],
      "form": {
        "excludedFields": ["id", "created_at", "updated_at", "_csrf_token"]
      },
      "index": {
        "excludedFields": ["id", "_csrf_token"]
      },
      "new": {},
      "edit": {},
      "singular": {},
      "navLinks": {
        "overwrite": true
      },
      "search": {
        "maxStringLength": 50,
        "searchSuggestionLimit": 10
      }
    }
  }
}
