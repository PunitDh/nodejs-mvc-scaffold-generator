<form method="POST">
  <div class="form-group d-flex row mb-2">
    <label for="name" class="form-label">
      <div class="mb-2">Name</div>
      <input type="TEXT" value="<%= animal.name %>" name="name"  class="form-control form-control" id="name" placeholder="Enter Name" autocomplete="off">
    </label>
  </div>
  <div class="form-group d-flex row mb-2">
    <label for="color" class="form-label">
      <div class="mb-2">Color</div>
      <input type="TEXT" value="<%= animal.color %>" name="color"  class="form-control form-control" id="color" placeholder="Enter Color" autocomplete="off">
    </label>
  </div>
  <div class="form-group mb-2">
    <%- include(locals.LayoutPages._csrf) %>
    <button type="submit" class="btn btn-primary">Submit Animal</button>
    <a href="/animals" class="btn btn-danger">Back</a>
  </div>
</form>