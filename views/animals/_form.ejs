<form method="POST">
  <div class="form-group d-flex row mb-2">
    <label for="name" class="form-label">
      <div class="mb-2 fw-bold">Name</div>
      <input
        type="TEXT"
        value="<%= animal.name %>"
        name="name"
        class="form-control"
        id="name"
        placeholder="Enter Name"
        autocomplete="off"
      />
    </label>
  </div>
  <div class="form-group d-flex row mb-2">
    <label for="color" class="form-label">
      <div class="mb-2 fw-bold">Color</div>
      <input
        type="TEXT"
        value="<%= animal.color %>"
        name="color"
        class="form-control"
        id="color"
        placeholder="Enter Color"
        autocomplete="off"
      />
    </label>
  </div>
  <div class="form-group d-flex row mb-2">
    <label for="color" class="form-label">
      <div class="mb-2 fw-bold">Image</div>
      <input
        type="file"
        value="<%= animal.image %>"
        name="image"
        class="form-control"
        id="image"
        placeholder="Select Image"
        autocomplete="off"
      />
    </label>
  </div>
  <div class="form-group mb-2">
    <%- include(locals.LayoutPages._csrf) %>
    <button type="submit" class="btn btn-primary">Submit Animal</button>
    <a href="/animals" class="btn btn-danger">Back</a>
  </div>
</form>
