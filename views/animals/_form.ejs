<% if (create) { %>
<form action="/animals %>" method="POST">
<% } else { %>
<form action="/animals/edit/<%= animal.id %>" method="POST">
<% } %>
  <div class="form-group d-flex row mb-2">
    <label for="name" class="form-label">
      <div class="mb-2">Name</div>
      <input type="TEXT" value="<%= create ? '' : animal.name %>" name="name"  class="form-control form-control" id="name" placeholder="Enter Name" autocomplete="off">
    </label>
  </div>
  <div class="form-group mb-2">
    <button type="submit" class="btn btn-primary"><%= page %> Animal</button>
    <a href="/animals" class="btn btn-danger">Back</a>
  </div>
</form>