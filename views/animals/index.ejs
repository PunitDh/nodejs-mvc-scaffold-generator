<%- include('./_head.ejs') %>
  <div class="container mt-4">
    <h1>Animals</h1>
    <table class="table mb-4">
      <thead>
        <th>Name</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Color</th>
        <th colspan="3">Actions</th>
      </thead>
      <tbody>
        <% for (const it of animals) { %>
        <tr>
          <td><%= it.name %></td>
          <td><%= formatDate(it.created_at) %></td>
          <td><%= formatDate(it.updated_at) %></td>
          <td><%= it.color %></td>
          <td><a href="/animals/<%= it.id %>" class="btn btn-primary">Show</a></td>
          <td><a href="/animals/edit/<%= it.id %>" class="btn btn-success">Edit</a></td>
          <td>
            <form action="/animals/delete/<%= it.id %>" method="POST">
              <input type="hidden" name="_csrf_token" value="<%= locals._csrf_token %>">
              <button type="submit" class="btn btn-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a href="/animals/new" class="btn btn-primary">New Animal</a>
  </div>
  <%- include('../_layouts/_tail.ejs') %>