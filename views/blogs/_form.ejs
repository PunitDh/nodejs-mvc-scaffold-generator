<% if (page === "Create") { %>
<form action="/blogs %>" method="POST">
<% } else { %>
<form action="/blogs/edit/<%= blog.id %>" method="POST">
<% } %>
  <div class="form-group d-flex row mb-2">
    <label for="title" class="form-label">
      <div class="mb-2">Title</div>
      <input type="TEXT" value="<%= page === "Create" ? '' : blog.title %>" name="title"  class="form-control form-control" id="title" placeholder="Enter Title" autocomplete="off">
    </label>
  </div>
  <div class="form-group d-flex row mb-2">
    <label for="body" class="form-label">
      <div class="mb-2">Body</div>
      <input type="TEXT" value="<%= page === "Create" ? '' : blog.body %>" name="body"  class="form-control form-control" id="body" placeholder="Enter Body" autocomplete="off">
    </label>
  </div>
  <div class="form-group mb-2">
    <button type="submit" class="btn btn-primary"><%= page %> Blog</button>
    <a href="/blogs" class="btn btn-danger">Back</a>
  </div>
</form>