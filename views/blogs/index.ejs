<%- include('./_head.ejs') %>
  <div class="container mt-4">
    <h1>Blogs</h1>
    <table class="table mb-4">
      <thead>
        <th>Title</th>
        <th>Body</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th colspan="3">Actions</th>
      </thead>
      <tbody>
        <% for (const it of blogs) { %>
        <tr>
          <td><%= it.title %></td>
          <td><%= it.body %></td>
          <td><%= formatDate(it.created_at) %></td>
          <td><%= formatDate(it.updated_at) %></td>
          <td><a href="/blogs/<%= it.id %>" class="btn btn-primary">Show</a></td>
          <td><a href="/blogs/edit/<%= it.id %>" class="btn btn-success">Edit</a></td>
          <td>
            <form action="/blogs/delete/<%= it.id %>" method="POST">
              <button type="submit" class="btn btn-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a href="/blogs/create" class="btn btn-primary">New Blog</a>
  </div>
  <%- include('../_layouts/_tail.ejs') %>