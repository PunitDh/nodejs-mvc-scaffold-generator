<form method="POST">
  <div class="form-group d-flex row mb-2">
    <label for="title" class="form-label">
      <div class="mb-2 fw-bold">Title</div>
      <input type="TEXT" value="<%= chat.title %>" name="title"  class="form-control form-control" id="title" placeholder="Enter Title" autocomplete="off">
    </label>
  </div>
  <div class="form-group mb-2">
    <%- include(locals.LayoutPages._csrf) %>
    <button type="submit" class="btn btn-primary">Submit Chat</button>
    <a href="/chats" class="btn btn-danger">Back</a>
  </div>
</form>