<%- include('./_head.ejs') %>
  <div class="container mt-4">
    <h1>Chats</h1>
    <table class="table mb-4">
      <thead>
      <tr>
        <th>Title</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>
      <tbody>
        <% for (const it of chats) { %>
        <tr>
          <td><%= it.title %></td>
          <td><%= formatDate(it.created_at) %></td>
          <td><%= formatDate(it.updated_at) %></td>
          <td><a href="/chats/<%= it.id %>" class="btn btn-primary">Show</a></td>
          <td><a href="/chats/edit/<%= it.id %>" class="btn btn-success">Edit</a></td>
          <td>
            <form action="/chats/delete/<%= it.id %>" method="POST">
              <%- include(locals.LayoutPages._csrf) %>
              <button type="submit" class="btn btn-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a href="/chats/new" class="btn btn-primary">New Chat</a>
  </div>
  <%- include(locals.LayoutPages._tail) %>