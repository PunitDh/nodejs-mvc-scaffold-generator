<%- include('./_head.ejs') %>
<div class="container mt-4">
  <h1>Comments</h1>
  <table class="table mb-4">
    <thead>
      <th>Blog Id</th>
      <th>Body</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3">Actions</th>
    </thead>
    <tbody>
      <% for (const it of comments) { %>
      <tr>
        <td><%= it.blog_id %></td>
        <td><%= it.body %></td>
        <td><%= formatDate(it.created_at) %></td>
        <td><%= formatDate(it.updated_at) %></td>
        <td>
          <a href="/comments/<%= it.id %>" class="btn btn-primary">Show</a>
        </td>
        <td>
          <a href="/comments/edit/<%= it.id %>" class="btn btn-success">Edit</a>
        </td>
        <td>
          <form action="/comments/delete/<%= it.id %>" method="POST">
            <%- include(locals.LayoutPages._csrf) %>
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <a href="/comments/new" class="btn btn-primary">New Comment</a>
</div>
<%- include('../_layouts/_tail.ejs') %>
