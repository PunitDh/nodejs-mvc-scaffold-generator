<%- include('./_head.ejs') %>
  <div class="container mt-4">
    <h1>Messages</h1>
    <table class="table mb-4">
      <thead>
      <tr>
        <th>Role</th>
        <th>Content</th>
        <th>Tokens</th>
        <th>Chat Id</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>
      <tbody>
        <% for (const it of messages) { %>
        <tr>
          <td><%= it.role %></td>
          <td><%= it.content %></td>
          <td><%= it.tokens %></td>
          <td><%= it.chat_id %></td>
          <td><%= formatDate(it.created_at) %></td>
          <td><%= formatDate(it.updated_at) %></td>
          <td><a href="/messages/<%= it.id %>" class="btn btn-primary">Show</a></td>
          <td><a href="/messages/edit/<%= it.id %>" class="btn btn-success">Edit</a></td>
          <td>
            <form action="/messages/delete/<%= it.id %>" method="POST">
              <%- include(locals.LayoutPages._csrf) %>
              <button type="submit" class="btn btn-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a href="/messages/new" class="btn btn-primary">New Message</a>
  </div>
  <%- include(locals.LayoutPages._tail) %>