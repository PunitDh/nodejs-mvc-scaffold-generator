<%- include('./_head.ejs') %>
  <div class="container mt-4">
    <h1>Movies</h1>
    <table class="table mb-4">
      <thead>
        <th>Name</th>
        <th>Year</th>
        <th>Theater Id</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th colspan="3">Actions</th>
      </thead>
      <tbody>
        <% for (const it of movies) { %>
        <tr>
          <td><%= it.name %></td>
          <td><%= it.year %></td>
          <td><%= it.theater_id %></td>
          <td><%= formatDate(it.created_at) %></td>
          <td><%= formatDate(it.updated_at) %></td>
          <td><a href="/movies/<%= it.id %>" class="btn btn-primary">Show</a></td>
          <td><a href="/movies/edit/<%= it.id %>" class="btn btn-success">Edit</a></td>
          <td>
            <form action="/movies/delete/<%= it.id %>" method="POST">
              <%- include(locals.LayoutPages._csrf) %>
              <button type="submit" class="btn btn-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a href="/movies/new" class="btn btn-primary">New Movie</a>
  </div>
  <%- include(locals.LayoutPages._tail) %>