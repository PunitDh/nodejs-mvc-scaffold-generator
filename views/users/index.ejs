<%- include('./_head.ejs') %>
<div class="container">
  <h1>Users</h1>
  <table class="table mb-4">
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </thead>
    <tbody>
      <% for (const it of users) { %>
      <tr>
        <td><%= it.first_name %></td>
        <td><%= it.last_name %></td>
        <td><%= it.email %></td>
        <td><a href="/users/<%= it.id %>" class="btn btn-primary">Show</a></td>
        <td>
          <a href="/users/edit/<%= it.id %>" class="btn btn-success">Edit</a>
        </td>
        <td>
          <form action="/users/delete/<%= it.id %>" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% if ( currentUser ) { %>
  <form action="/users/logout" method="POST">
    <button type="submit" class="btn btn-primary">Logout</button>
  </form>
  <% } else { %>
  <a href="/users/login" class="btn btn-primary">Login</a>
  <a href="/users/register" class="btn btn-outline-primary">Register</a>
  <% } %>
</div>
<%- include('../_layouts/_tail.ejs') %>
